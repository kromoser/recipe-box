<h1><%= @user.username %>'s Recipes</h1>


  <% if @user.recipes.empty? %>
    <p>You haven't created any recipes.</p> 
  <% else %>
    <ul>
    <% @user.recipes.all.each do |recipe| %>
      <li><a href="/recipes/<%= recipe.id %>"><%= recipe.name.capitalize %></a></li>
    <% end %>
    </ul>
  <% end %>

<form action="/recipes/new">
  <button type="submit">Create a new recipe</button>
</form>
